# import math

def luas_persegi_panjang(panjang, lebar):
    """Menghitung luas persegi panjang."""
    return panjang * lebar

def luas_lingkaran(jari_jari):
    """Menghitung luas lingkaran."""
    return 3.14 * (jari_jari ** 2)

def fx(x):
    """Menghitung nilai dari fungsi f(x) = 2x^2 + 3x - 10."""
    return 2 * (x ** 2) + 3 * x - 10

# Menampilkan menu pilihan
print("Pilih opsi:")
print("1. Hitung luas persegi panjang")
print("2. Hitung luas lingkaran")
print("3. Hitung nilai f(x) = 2x^2 + 3x - 10")

# Mengambil input dari pengguna
pilihan = input("Masukkan pilihan (1/2/3): ")

if pilihan == '1':
    panjang = float(input("Masukkan panjang: "))
    lebar = float(input("Masukkan lebar: "))
    print("Luas persegi panjang adalah:", luas_persegi_panjang(panjang, lebar))
elif pilihan == '2':
    jari_jari = float(input("Masukkan jari-jari lingkaran: "))
    print("Luas lingkaran adalah:", luas_lingkaran(jari_jari))
elif pilihan == '3':
    x = float(input("Masukkan nilai x: "))
    print("Nilai f(x) adalah:", fx(x))
else:
    print("Peringatan: Hanya boleh memilih 1, 2, atau 3.")
